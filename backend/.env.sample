# Laborly Backend Environment Configuration
APP_NAME=Laborly
DEBUG=True
LOG_LEVEL=DEBUG

# PostgreSQL connection URL for development
DATABASE_URL=postgresql+asyncpg://<user>:<password>@<host>:<port>/<db_name>

# PostgreSQL connection URL for testing
TEST_DATABASE_URL=postgresql+asyncpg://<user>:<password>@<host>:<port>/<test_db_name>

# Security keys
SECRET_KEY=<your-secret-key>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth2 credentials
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>
AWS_REGION=us-east-1
AWS_S3_BUCKET=<your-s3-bucket-name>

# Email Configuration
MAIL_USERNAME=<your-mailtrap-username>
MAIL_PASSWORD=<your-mailtrap-password>
MAIL_FROM=noreply@laborly.com
MAIL_FROM_NAME=Laborly
MAIL_SERVER=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
MAIL_USE_CREDENTIALS=True
MAIL_VALIDATE_CERTS=True
MAIL_TEMPLATE_FOLDER=templates/email
BASE_URL=http://localhost:8000
SUPPORT_EMAIL=support@example.com